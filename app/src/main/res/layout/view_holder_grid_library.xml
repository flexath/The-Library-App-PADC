<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_card_medium"
    android:paddingEnd="@dimen/margin_card_medium"
    android:paddingBottom="@dimen/margin_medium_3">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvCoverPhotoLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardPreventCornerOverlap="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCoverSmallGrid"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_holder" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnOptionBookGrid"
        android:layout_width="@dimen/width_28dp"
        android:layout_height="@dimen/height_28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:elevation="@dimen/margin_medium_2"
        android:fadingEdgeLength="@dimen/margin_medium"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dots" />

    <FrameLayout
        android:id="@+id/btnHeadphoneLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTitleLibrarySmallGrid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:background="@drawable/btn_banner_background"
        android:elevation="@dimen/margin_medium"
        android:padding="@dimen/margin_small"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/width_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_headset_white_24dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnCorrectLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTitleLibrarySmallGrid"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:background="@drawable/btn_banner_background"
        android:elevation="@dimen/margin_medium"
        android:padding="@dimen/margin_small"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/width_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_baseline_download_done_white_24dp" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleLibrarySmallGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcvCoverPhotoLibrary"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:maxLines="2"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorSecondary"
        android:text="Clean.Code.A.Handbook.of.Agile.Software.Craftsmanship" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthorLibrarySmallGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleLibrarySmallGrid"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/colorSecondary"
        android:maxLines="2"
        android:textSize="@dimen/text_regular"
        android:text="Steven Hawking" />

</RelativeLayout>