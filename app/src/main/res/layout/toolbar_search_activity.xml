<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBackSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium_3"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_secondary_24dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomEditTextStyle"
        android:focusableInTouchMode="true"
        android:paddingTop="@dimen/margin_medium_2"
        android:textSize="@dimen/text_regular_2x_n"
        android:paddingBottom="@dimen/margin_medium_2"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/btnBackSearch"
        android:hint="@string/search_play_books_lbl" />


</RelativeLayout>