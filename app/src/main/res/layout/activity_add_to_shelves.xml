<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddToShelvesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/actionBarAddToShelves"
            layout="@layout/toolbar_add_to_shelves"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddToShelves"
            android:layout_width="match_parent"
            android:layout_below="@+id/actionBarAddToShelves"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_card_medium_2"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_medium_3"
            tools:listitem="@layout/view_holder_add_to_shelves_list"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>