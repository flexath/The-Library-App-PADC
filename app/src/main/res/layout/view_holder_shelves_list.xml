<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/margin_medium_2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvCoverShelvesList"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="@dimen/margin_card_medium_2"
        app:cardCornerRadius="@dimen/margin_small">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCoverShelvesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:fadingEdgeLength="@dimen/margin_small"
            app:srcCompat="@drawable/img_holder" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleShelvesList"
        android:layout_width="230dp"
        android:layout_toEndOf="@+id/mcvCoverShelvesList"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:gravity="start"
        tools:text="A brief history of time by Steven Hawking"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumberOfBookShelvesList"
        android:layout_width="wrap_content"
        android:text="1 book"
        android:layout_below="@+id/tvTitleShelvesList"
        android:layout_toEndOf="@+id/mcvCoverShelvesList"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorPrimaryLight"
        android:maxLines="1"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnForwardShelvesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvTitleShelvesList"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"/>

</RelativeLayout>