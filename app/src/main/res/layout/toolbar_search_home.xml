<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_search_background"
    android:elevation="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginTop="@dimen/margin_medium_3"
    android:layout_marginEnd="@dimen/margin_large">

    <com.flexath.thelibrary.views.components.RoundedProfileImage
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/margin_card_medium_2"
        android:elevation="@dimen/margin_medium"
        android:scaleType="centerCrop"
        app:cornerRadius="20dp"
        app:srcCompat="@drawable/dummy_ath" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_search_secondary_24dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:paddingTop="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_medium_2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_play_books_lbl"
        android:textSize="@dimen/text_regular_2x_n"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/height_55dp"/>

</FrameLayout>