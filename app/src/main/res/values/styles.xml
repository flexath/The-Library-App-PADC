<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_cursor_color</item>
    </style>

    <style name="RoundedAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DeleteAlertDialogCustomTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DeleteAlertDialogCustomPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DeleteAlertDialogNegative</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DeleteAlertDialogCustomBodyText</item>
    </style>

    <style name="DeleteAlertDialogCustomTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="DeleteAlertDialogCustomPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorProfileImageFirst</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">@dimen/margin_medium_3_n</item>
        <item name="android:paddingBottom">@dimen/margin_medium_3_n</item>
    </style>

    <style name="DeleteAlertDialogNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">@dimen/margin_medium_3_n</item>
        <item name="android:paddingBottom">@dimen/margin_medium_3_n</item>
    </style>

    <style name="DeleteAlertDialogCustomBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>

</resources>